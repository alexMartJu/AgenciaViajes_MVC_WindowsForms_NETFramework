<Window x:Class="AgenciaViajes.View.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgenciaViajes.View.WPF"
        mc:Ignorable="d"
        Title="Agencia de Viajes - TravelWorld" Height="650" Width="1100" Background="#FFF0F0F0"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- RADIOBUTTON MENÚ SUPERIOR -->
        <Style x:Key="TopMenuRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="14,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="TopMenu"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="12,6"
                                Background="Transparent"
                                CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#335D7FA3"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#FF8C42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- BOTÓN SALIR -->
        <Style x:Key="TopMenuButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="25,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Padding="12,6"
                                Background="Transparent"
                                CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#33FF0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ================== CONTENEDOR PRINCIPAL ================== -->
    <Grid>
        <DockPanel LastChildFill="True">

            <!-- MENÚ SUPERIOR -->
            <Border DockPanel.Dock="Top"
                    Height="60"
                    Background="#2B2E34">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                    <!-- CLIENTES -->
                    <RadioButton x:Name="rdbClientes"
                                 Style="{StaticResource TopMenuRadioButton}"
                                 Checked="RdbClientes_Checked">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/clientes.png"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,6,0"/>
                            <TextBlock Text="Clientes"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- VIAJES -->
                    <RadioButton Style="{StaticResource TopMenuRadioButton}"
                                 Checked="RdbViajes_Checked">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/viajes.png"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,6,0"/>
                            <TextBlock Text="Viajes"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- RESERVAS -->
                    <RadioButton Style="{StaticResource TopMenuRadioButton}"
                                 Checked="RdbReservas_Checked">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/reservas.png"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,6,0"/>
                            <TextBlock Text="Reservas"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- SALIR -->
                    <Button Style="{StaticResource TopMenuButton}"
                            Click="BtnSalir_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/salir.png"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,6,0"/>
                            <TextBlock Text="Salir"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>

            <!-- HEADER -->
            <Border DockPanel.Dock="Top"
                    Background="White"
                    Padding="12"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1">
                <TextBlock x:Name="txtTitulo"
                           Text="Gestión de Clientes"
                           Foreground="#FF8C42"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- CONTENIDO -->
            <Border Padding="20">
                <ContentControl x:Name="MainContent"/>
            </Border>

        </DockPanel>
    </Grid>
</Window>
