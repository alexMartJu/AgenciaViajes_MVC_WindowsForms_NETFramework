<UserControl x:Class="AgenciaViajes.View.WPF.Views.ReservasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgenciaViajes.View.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">

    <UserControl.Resources>

        <!-- TARJETA -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- LABEL -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2B2E34"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- INPUT -->
        <Style x:Key="InputControl" TargetType="Control">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- BOTÓN -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DATAGRID -->
        <Style x:Key="CustomDataGrid" TargetType="DataGrid">
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#FF8C42"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F7FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFA347"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFA347"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredTextBlock" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <!-- ================== CONTENEDOR PRINCIPAL ================== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================== ZONA SUPERIOR ================== -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- BOTONES -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0"
                            Content="Crear"
                            Background="#2ECC71"
                            Style="{StaticResource ActionButton}"
                            Click="BtnCrear_Click"/>

                    <Button Grid.Row="2"
                            Content="Cancelar"
                            Background="#E74C3C"
                            Style="{StaticResource ActionButton}"
                            Click="BtnCancelar_Click"/>

                    <Button Grid.Row="4"
                            Content="Por cliente"
                            Background="#3498DB"
                            Style="{StaticResource ActionButton}"
                            Click="BtnPorCliente_Click"/>

                    <Button Grid.Row="6"
                            Content="Por viaje"
                            Background="#3498DB"
                            Style="{StaticResource ActionButton}"
                            Click="BtnPorViaje_Click"/>

                    <Button Grid.Row="8"
                            Content="Mostrar todas"
                            Background="#2B2E34"
                            Style="{StaticResource ActionButton}"
                            Click="BtnMostrarTodas_Click"/>
                </Grid>
            </Border>

            <!-- FORMULARIO -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <StackPanel>

                    <TextBlock Text="Datos de la Reserva"
                               FontWeight="Bold"
                               FontSize="15"
                               Foreground="#FF8C42"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Cliente" Style="{StaticResource FieldLabel}"/>
                    <ComboBox x:Name="cmbClientes"
                              DisplayMemberPath="NombreCompleto"
                              SelectedValuePath="IdCliente"
                              Style="{StaticResource InputControl}"/>

                    <TextBlock Text="Viaje"
                               Style="{StaticResource FieldLabel}"
                               Margin="0,10,0,0"/>
                    <ComboBox x:Name="cmbViajes"
                              DisplayMemberPath="Destino"
                              SelectedValuePath="IdViaje"
                              Style="{StaticResource InputControl}"/>

                    <TextBlock Text="Fecha"
                               Style="{StaticResource FieldLabel}"
                               Margin="0,10,0,0"/>
                    <DatePicker x:Name="dpFecha"
                                Style="{StaticResource InputControl}"/>

                </StackPanel>
            </Border>
        </Grid>

        <!-- ================== DATAGRID ================== -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <DataGrid x:Name="dgReservas"
                      Style="{StaticResource CustomDataGrid}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      RowStyle="{StaticResource DataGridRowStyle}"
                      CellStyle="{StaticResource DataGridCellStyle}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgReservas_SelectionChanged">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID Reserva"
                                        Binding="{Binding IdReserva}"
                                        Width="100"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>

                    <DataGridTextColumn Header="ID Cliente"
                                        Binding="{Binding IdCliente}"
                                        Width="100"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>

                    <DataGridTextColumn Header="ID Viaje"
                                        Binding="{Binding IdViaje}"
                                        Width="100"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>

                    <!-- FECHA FORMATEADA (SIN HORA) -->
                    <DataGridTextColumn Header="Fecha"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextBlock}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="FechaReserva"
                                     StringFormat="{}{0:dd/MM/yyyy}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>
