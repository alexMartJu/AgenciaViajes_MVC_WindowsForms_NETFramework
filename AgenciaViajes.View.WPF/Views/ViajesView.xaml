<UserControl x:Class="AgenciaViajes.View.WPF.Views.ViajesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgenciaViajes.View.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">

    <UserControl.Resources>

        <!-- ================== TARJETA ================== -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ================== LABEL ================== -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2B2E34"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- ================== TEXTBOX ================== -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderBrush" Value="#2B2E34"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                        Background="White"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFA347"/>
                                <!-- naranja -->
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================== BOTÓN ================== -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================== DATAGRID ================== -->
        <Style x:Key="CustomDataGrid" TargetType="DataGrid">
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#FF8C42"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F7FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFA347"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFA347"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredTextBlock" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <!-- ================== CONTENEDOR PRINCIPAL ================== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================== ZONA SUPERIOR ================== -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TARJETA BOTONES -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0"
                            Content="Crear"
                            Background="#2ECC71"
                            Style="{StaticResource ActionButton}"
                            Click="BtnCrear_Click"/>

                    <Button Grid.Row="2"
                            Content="Editar"
                            Background="#5B9BD4"
                            Style="{StaticResource ActionButton}"
                            Click="BtnEditar_Click"/>

                    <Button Grid.Row="4"
                            Content="Eliminar"
                            Background="#E74C3C"
                            Style="{StaticResource ActionButton}"
                            Click="BtnEliminar_Click"/>
                </Grid>
            </Border>

            <!-- TARJETA FORMULARIO -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <StackPanel>

                    <TextBlock Text="Datos del Viaje"
                               FontWeight="Bold"
                               FontSize="15"
                               Foreground="#FF8C42"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Destino" Style="{StaticResource FieldLabel}"/>
                    <TextBox x:Name="txtDestino"
                             Style="{StaticResource InputTextBox}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Precio" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtPrecio"
                                     Style="{StaticResource InputTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Plazas" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtPlazas"
                                     Style="{StaticResource InputTextBox}"/>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Border>
        </Grid>

        <!-- ================== DATAGRID ================== -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <DataGrid x:Name="dgViajes"
                      Style="{StaticResource CustomDataGrid}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      RowStyle="{StaticResource DataGridRowStyle}"
                      CellStyle="{StaticResource DataGridCellStyle}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgViajes_SelectionChanged">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding IdViaje}"
                                        Width="60"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>

                    <DataGridTextColumn Header="Destino"
                                        Binding="{Binding Destino}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>

                    <DataGridTextColumn Header="Precio"
                                        Binding="{Binding Precio}"
                                        Width="120"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>

                    <DataGridTextColumn Header="Plazas"
                                        Binding="{Binding PlazasDisponibles}"
                                        Width="120"
                                        ElementStyle="{StaticResource CenteredTextBlock}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>
